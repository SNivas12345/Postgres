FROM debian:postgresql
RUN 
groupadd -r postgres --gid=999 && 
useradd -r -g postgres --uid=999 postgres &&
ENV GOSU_VERSION 1.7
RUN apt-get update \
&& apt-get install -y postgresql-common \
&& apt-get install -y \
ENV PG_MAJOR 9.5
ENV PG_VERSION 9.5.5-1.pgdg80+1
RUN 
echo 'deb http://apt.postgresql.org/pub/repos/apt/ postgresql-pgdg main' $PG_MAJOR > /etc/apt/sources.list.d/pgdg.list
RUN 
mv -v /usr/share/postgresql/$PG_MAJOR/postgresql.conf.sample /usr/share/postgresql/ 
RUN 
mkdir -p /var/run/postgresql && chown -R postgres /var/run/postgresql 
ENV PATH /usr/lib/postgresql/$PG_MAJOR/bin:$PATH
ENV PGDATA /var/lib/postgresql/data
VOLUME /var/lib/postgresql/data
COPY docker-entrypoint.sh /
ENTRYPOINT ["/docker-entrypoint.sh"]
EXPOSE 5432
CMD ["postgres"]
